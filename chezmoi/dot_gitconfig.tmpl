[includeIf "gitdir:~/src/personal/"]
    path = ~/src/personal/.gitconfig-personal
[includeIf "gitdir:~/.local/share/"]
    path = ~/src/personal/.gitconfig-personal
[includeIf "gitdir:~/src/work/"]
    path = ~/src/work/.gitconfig-work
[color]
    ui = true
[core]
    autocrlf = false
    filemode = false
    editor = code --wait
    pager = delta
    {{ if eq .chezmoi.os "windows" -}}
    sshCommand = C:/Windows/System32/OpenSSH/ssh.exe
    {{ end -}}
    {{ if eq .is_wsl true -}}
    sshCommand = ssh.exe
    {{ end -}}
[interactive]
	diffFilter = delta --color-only
[diff]
	colorMoved = default
[delta]
	navigate = true
	line-numbers = true
    side-by-side = true
[merge]
	conflictstyle = diff3
	tool = vimdiff
[init]
    defaultBranch = main
[pull]
    rebase = true
[rerere]
    enabled = true
[remote "origin"]
    prune = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
{{- if (and (eq .git.sshsigning_enabled true) (ne .is_devcontainer true)) }}
[commit]
  gpgsign = true
[gpg]
  format = ssh
[gpg "ssh"]
  {{ if eq .chezmoi.os "darwin" -}}
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
  {{- else if eq .chezmoi.os "windows" -}}
  program = "C:/Users/{{ .chezmoi.username }}/AppData/Local/1Password/app/8/op-ssh-sign.exe"
  {{- else if eq .is_wsl true -}}
  program = "/mnt/c/Users/{{ .chezmoi.username }}/AppData/Local/1Password/app/8/op-ssh-sign-wsl"
  {{ end }}
  allowedSignersFile = "$HOME/.ssh/allowed_signers"
{{ end -}}
