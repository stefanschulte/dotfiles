{{ if (and (eq .feature.karabiner.enabled true) (eq .is_personal_device true)) -}}
{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.24/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 0,
  "default_container_padding": 0,
  "border_width": 0,
  "border_offset": -1,
  "active_window_border": false,
  "active_window_border_colours": {
    "single": "#42a5f5",
    "stack": "#00a542",
    "monocle": "#ff3399"
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "Terminal",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "WindowsTerminal.exe"
            }
          ]
        },
        {
          "name": "IDE",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Code.exe"
            }
          ]
        },
        {
          "name": "Browser",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "msedge.exe"
            }
          ]
        },
        {
          "name": "Obsidian",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Obsidian.exe"
            }
          ]
        },
        {
          "name": "Teams",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "ms-teams.exe"
            }
          ]
        },
        {
          "name": "Mail",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "OUTLOOK.EXE"
            }
          ]
        },
        {
          "name": "Remote",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "RoyalTS.exe"
            }
          ]
        },
        {
          "name": "Music",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Spotify.exe"
            }
          ]
        },
        {
          "name": "Discord",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Discord.exe"
            }
          ]
        },
        {
          "name": "Random1",
          "layout": "BSP"
        }
      ]
    }
  ]
}
{{ end }}
